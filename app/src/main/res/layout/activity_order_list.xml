<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBkGrdList"

    android:orientation="vertical"
    tools:context="daria.sem4.labworks.menuapp.OrderListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/order_list_header"
        android:textColor="@color/colorTitleList"
        android:textSize="@android:dimen/app_icon_size" />

    <TextView
        android:id="@+id/txtTableNumberOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:text="155"
        android:textColor="@color/colorTitleList"
        android:textSize="@android:dimen/app_icon_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnAddPortion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/btnSubPortion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_down_float" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtItemsNum"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="1"
            android:maxLines="1"
            android:textColor="@color/colorTableItem" />

        <Spinner
            android:id="@+id/spSelectItemOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:scrollbarStyle="outsideInset"
            android:textColor="@color/colorTableItem" />

        <ImageView
            android:id="@+id/btnAddNewItemToOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_input_add" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewOrderItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="cursive"
            android:gravity="left"
            android:text="Total:"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/txtTotalSum"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:fontFamily="serif"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTableItem"
            android:text="150.50" />

        <Button
            android:id="@+id/btnCloseOrder"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="@string/close_button" />
    </LinearLayout>


</LinearLayout>
